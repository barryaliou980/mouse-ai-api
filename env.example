# Configuration du serveur Python Mouse AI API

# Configuration du serveur
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Configuration CORS (séparer par des virgules pour plusieurs origines)
CORS_ORIGINS=*

# Configuration de l'IA
USE_AI_AGENT=false
MODEL_PATH=

# Configuration de l'API
MAX_LABYRINTH_SIZE=100

# Configuration des logs
LOG_LEVEL=INFO
MAX_LOGS=1000

# Exemples de configuration pour différents environnements:

# Développement local
# HOST=0.0.0.0
# PORT=8000
# DEBUG=true
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production
# HOST=0.0.0.0
# PORT=8000
# DEBUG=false
# CORS_ORIGINS=https://mouse-labyrinth.vercel.app/,https://www.mouse-labyrinth.vercel.app

# Docker
# HOST=0.0.0.0
# PORT=8000
# DEBUG=false
# CORS_ORIGINS=http://frontend:3000
